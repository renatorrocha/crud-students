model Students {
    id        String   @id @default(uuid())
    name      String
    email     String
    birthDate DateTime
    status    Status   @default(ACTIVATED)
    SchoolId  String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    School Schools @relation(fields: [SchoolId], references: [id])
}

model Schools {
    id     String @id @default(uuid())
    name   String
    email  String
    status Status @default(ACTIVATED)

    students Students[]
}
